pipeline {
    agent any
    stages {
        stage('Unit Test') {
            steps {
                sh 'cd server && ./mvnw test'
            }
        }
        stage('Verify') {
            steps {
                sh 'cd server && ./mvnw -B clean verify'
            }
        }
        stage('Build Image') {
            steps {
                sh "cd server && docker build -t engineer365/fleashop:${env.BUILD_ID} ."
            }
        }
    }
}
